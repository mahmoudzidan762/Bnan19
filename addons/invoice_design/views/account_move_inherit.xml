<odoo>
    <data>
        <record id="view_account_move_form_inherit" model="ir.ui.view">
            <field name="name">view.account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group[1]" position="inside">
                    <group>
                        <field name="purchase_order_number" placeholder="Enter PO No......"/>
                    </group>
                </xpath>

                <xpath expr="//sheet//notebook//page[1]//field[@name='price_unit']" position="after">
                    <field name="total_price_without_tax_and_discount" string="Total Price"/>
                </xpath>

                <xpath expr="//sheet//notebook//page[1]//field[@name='discount']" position="after">
                    <field name="total_price_after_discount" string="Total A. Disc"/>
                </xpath>

                <xpath expr="//sheet//notebook//page[1]//field[@name='price_subtotal']" position="replace">
                    <field name="price_total" string="Amount"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>