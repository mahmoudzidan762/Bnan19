            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group[2]" position="inside">
                    <field name="x_customer_a_name"/>
                    <field name="x_street_a_name"/>
                    <field name="x_district_a_name"/>
                    <field name="x_city_a_name"/>
                    <field name="x_country_a_name"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>